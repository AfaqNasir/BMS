<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".project.banking.manager.ManagerUpdateUserInfoActivity">

  <TextView
    android:id="@+id/update_instr"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginTop="16dp"
    android:text="@string/update_instr"
    android:textColor="@color/colorGetInfo"
    android:textSize="18sp"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

  <TextView
    android:id="@+id/get_name"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginTop="24dp"
    android:text="@string/new_name"
    android:textSize="@dimen/input_text"
    android:textColor="@color/colorGetInfo"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/update_instr" />

  <EditText
    android:id="@+id/customer_new_name"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginTop="8dp"
    android:ems="10"
    android:hint="@string/name_hint"
    android:inputType="textPersonName"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/get_name" />

  <TextView
    android:id="@+id/get_age"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="24dp"
    android:text="@string/new_age"
    android:textSize="@dimen/input_text"
    android:textColor="@color/colorGetInfo"
    app:layout_constraintTop_toBottomOf="@+id/customer_new_name"
    android:layout_marginStart="16dp"
    app:layout_constraintLeft_toLeftOf="parent" />

  <EditText
    android:id="@+id/customer_new_age"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginTop="8dp"
    android:ems="10"
    android:hint="@string/age_hint"
    android:inputType="number"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/get_age" />

  <TextView
    android:id="@+id/get_address"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginTop="24dp"
    android:text="@string/new_address"
    android:textSize="@dimen/input_text"
    android:textColor="@color/colorGetInfo"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/customer_new_age" />

  <EditText
    android:id="@+id/customer_new_address"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginTop="8dp"
    android:ems="10"
    android:hint="@string/address_hint"
    android:inputType="textPersonName"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/get_address" />

  <TextView
    android:id="@+id/get_password"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginTop="24dp"
    android:text="@string/new_password"
    android:textSize="@dimen/input_text"
    android:textColor="@color/colorGetInfo"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/customer_new_address" />

  <EditText
    android:id="@+id/customer_new_password"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginTop="8dp"
    android:ems="10"
    android:hint="@string/pw_hint"
    android:inputType="textPassword"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/get_password" />

  <Button
    android:id="@+id/button_update_name"
    android:layout_width="@dimen/button_width"
    android:layout_height="@dimen/button_height"
    android:layout_marginEnd="16dp"
    android:text="@string/update"
    android:background="@color/table_title_background"
    app:layout_constraintBaseline_toBaselineOf="@+id/customer_new_name"
    app:layout_constraintRight_toRightOf="parent" />

  <Button
    android:id="@+id/button_update_age"
    android:layout_width="@dimen/button_width"
    android:layout_height="@dimen/button_height"
    android:layout_marginEnd="16dp"
    android:text="@string/update"
    android:background="@color/table_title_background"
    app:layout_constraintBaseline_toBaselineOf="@+id/customer_new_age"
    app:layout_constraintRight_toRightOf="parent" />

  <Button
    android:id="@+id/button_update_address"
    android:layout_width="@dimen/button_width"
    android:layout_height="@dimen/button_height"
    android:layout_marginEnd="16dp"
    android:text="@string/update"
    android:background="@color/table_title_background"
    app:layout_constraintBaseline_toBaselineOf="@+id/customer_new_address"
    app:layout_constraintRight_toRightOf="parent" />

  <Button
    android:id="@+id/button_update_password"
    android:layout_width="@dimen/button_width"
    android:layout_height="@dimen/button_height"
    android:layout_marginEnd="16dp"
    android:text="@string/update"
    android:background="@color/table_title_background"
    app:layout_constraintBaseline_toBaselineOf="@+id/customer_new_password"
    app:layout_constraintRight_toRightOf="parent" />

  <TextView
    android:id="@+id/message"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:textColor="@color/colorImportant"
    android:textSize="@dimen/input_text"
    android:layout_marginTop="16dp"
    app:layout_constraintTop_toBottomOf="@+id/customer_new_password"
    android:layout_marginLeft="16dp"
    app:layout_constraintLeft_toLeftOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
