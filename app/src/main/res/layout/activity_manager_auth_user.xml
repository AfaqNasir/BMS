<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".project.banking.manager.ManagerAuthCustomerActivity">

  <TextView
    android:id="@+id/teller_auth_instr"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="16dp"
    android:layout_marginTop="16dp"
    android:text="@string/auth_user_instr"
    android:textSize="18sp"
    android:textColor="@color/colorGetInfo"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

  <TextView
    android:id="@+id/get_userid"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="16dp"
    android:layout_marginTop="19dp"
    android:text="@string/get_id"
    android:textSize="@dimen/input_text"
    android:textColor="@color/colorGetInfo"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/teller_auth_instr" />

  <EditText
    android:id="@+id/teller_get_cus_id"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="16dp"
    android:layout_marginTop="8dp"
    android:ems="10"
    android:hint="@string/userid_hint"
    android:inputType="number"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/get_userid" />

  <TextView
    android:id="@+id/get_userpw"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="16dp"
    android:layout_marginTop="16dp"
    android:text="@string/get_pw"
    android:textSize="@dimen/input_text"
    android:textColor="@color/colorGetInfo"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/teller_get_cus_id" />

  <EditText
    android:id="@+id/teller_get_cus_pw"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="16dp"
    android:layout_marginTop="8dp"
    android:ems="10"
    android:hint="@string/pw_hint"
    android:inputType="textPassword"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/get_userpw" />

  <Button
    android:id="@+id/button_teller_auth_cus"
    android:layout_width="@dimen/button_width"
    android:layout_height="@dimen/button_height"
    android:background="@color/table_title_background"
    android:text="@string/login"
    android:layout_marginTop="16dp"
    app:layout_constraintTop_toBottomOf="@+id/teller_get_cus_pw"
    android:layout_marginLeft="16dp"
    app:layout_constraintLeft_toLeftOf="parent" />

  <TextView
    android:id="@+id/display_result"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="16dp"
    android:layout_marginTop="16dp"
    android:textSize="@dimen/input_text"
    android:textColor="@color/colorImportant"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/button_teller_auth_cus" />
</androidx.constraintlayout.widget.ConstraintLayout>
