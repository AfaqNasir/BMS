<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <Button
    android:id="@+id/button_view_own_msg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="32dp"
    android:layout_marginStart="32dp"
    android:layout_marginTop="36dp"
    android:background="@color/table_title_background"
    android:text="@string/view_own_msg" />

  <Button
    android:id="@+id/button_view_cus_msg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="32dp"
    android:layout_marginStart="32dp"
    android:layout_marginTop="16dp"
    android:background="@color/table_title_background"
    android:text="@string/view_your_user_msg" />

  <Button
    android:id="@+id/button_leave_msg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="32dp"
    android:layout_marginStart="32dp"
    android:layout_marginTop="16dp"
    android:background="@color/table_title_background"
    android:text="@string/leave_msg" />

  <TextView
    android:id="@+id/message"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="36dp"
    android:layout_marginTop="16dp"
    android:textSize="@dimen/input_text"
    android:textColor="@color/colorImportant" />
</LinearLayout>