<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal|center_vertical"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.oritechs.BMS.project.banking.MainActivity">

  <ImageView
      android:id="@+id/jbfb_logo"
      android:layout_width="180dp"
      android:layout_height="180dp"
      android:layout_gravity="center_horizontal|center_vertical"
      android:contentDescription="@string/logo_description"
      app:srcCompat="@mipmap/ic_launcher" />

  <TextView
      android:id="@+id/get_userId"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center_horizontal|center_vertical"
      android:layout_marginTop="15dp"
      android:gravity="center"
      android:text="@string/get_id"
      android:textColor="@color/colorGetInfo"
      android:textSize="24sp" />

  <EditText
      android:id="@+id/login_id"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_gravity="center_horizontal|center_vertical"
      android:layout_marginLeft="50dp"
      android:layout_marginRight="50dp"
      android:gravity="center"
      android:hint="@string/userid_hint"
      android:inputType="number" />


  <TextView
      android:id="@+id/get_userpw"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center_horizontal|center_vertical"
      android:layout_marginTop="15dp"
      android:gravity="center"
      android:text="@string/get_pw"
      android:textColor="@color/colorGetInfo"
      android:textSize="24sp"
      app:layout_constraintLeft_toLeftOf="parent" />

  <EditText
      android:id="@+id/login_pw"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_gravity="center_horizontal|center_vertical"
      android:layout_marginLeft="50dp"
      android:layout_marginRight="50dp"
      android:gravity="center"
      android:hint="@string/pw_hint"
      android:inputType="textPassword" />

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_gravity="center_horizontal|center_vertical"
      android:orientation="horizontal"
      android:padding="10dp">

    <Button
        android:id="@+id/button_login"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:background="@color/table_title_background"
        android:text="@string/login" />

    <Button
        android:id="@+id/button_forget_password"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:background="@color/table_title_background"
        android:text="@string/forget_password" />
  </LinearLayout>

</LinearLayout>
