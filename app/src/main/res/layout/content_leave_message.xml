<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent">


  <ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">

      <TextView
        android:id="@+id/leave_msg_instr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/leave_msg_instr"
        android:textColor="@color/colorGetInfo"
        android:textSize="18sp" />

      <TextView
        android:id="@+id/get_userid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:textSize="@dimen/input_text"
        android:text="@string/get_user_id"
        android:textColor="@color/colorGetInfo" />

      <EditText
        android:id="@+id/userid_leave_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="@string/userid_hint"
        android:inputType="number" />

      <TextView
        android:id="@+id/get_message_to_be_sent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:textSize="@dimen/input_text"
        android:text="@string/get_message_content"
        android:textColor="@color/colorGetInfo" />

      <EditText
        android:id="@+id/message_will_be_sent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="@string/message_content_hint"
        android:inputType="textMultiLine" />

      <Button
        android:id="@+id/send_message"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:background="@color/table_title_background"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/send_message" />

      <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:textSize="@dimen/input_text"
        android:textColor="@color/colorImportant" />

    </LinearLayout>
  </ScrollView>
</LinearLayout>